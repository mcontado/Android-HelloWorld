<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/thanksTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:scaleType="fitXY"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/mushroom_image"
        android:visibility="visible" />

    <TextView
        android:id="@+id/nameTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"/>

    <TextView
        android:id="@+id/ageTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AGE"/>

    <TextView
        android:id="@+id/emailTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"/>

    <TextView
        android:id="@+id/userNameTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME"/>

    <TextView
        android:id="@+id/birthDateTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USERNAME"/>

    <TextView
        android:id="@+id/descriptionTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"/>

    <TextView
        android:id="@+id/occupationTextViewSecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OCCUPATION"/>

    <Button
        android:id="@+id/backToMainBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backToMain"
        android:text="@string/back_button" />

</LinearLayout>
