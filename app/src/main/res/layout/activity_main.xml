<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/linear_layout_marginHorizontal"
    android:layout_marginTop="@dimen/layout_marginTop"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        android:layout_margin="@dimen/layout_margin_main"/>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_email"
        android:layout_margin="@dimen/layout_margin_main"/>

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_username"
        android:layout_margin="@dimen/layout_margin_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_main"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/birthDateButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBirthDateClick"
            android:text="@string/birthDateButtonText" />

        <TextView
            android:id="@+id/birthDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_birthdate" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_age" />
    </LinearLayout>

    <EditText
        android:id="@+id/selfDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tell_about_yourself"
        android:layout_margin="@dimen/layout_margin_main"/>

    <EditText
        android:id="@+id/occupationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_occupation"
        android:layout_margin="@dimen/layout_margin_main"/>

    <Button
        android:id="@+id/submitButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_button"
        android:text="@string/submit_button"
        android:onClick="onSubmit"
        android:background="#74B4BC"
        android:layout_margin="@dimen/layout_margin_main"
        app:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/errorMsgTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/errorMsgMarginTop"
        android:layout_margin="@dimen/layout_margin_main" />

    <!--<FrameLayout-->
        <!--android:id="@+id/container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_margin="@dimen/linear_layout_padding"/>-->

</LinearLayout>